@model Project_Eisenhower.ViewModels.FieldFormVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Field</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FieldId" />
            <div class="form-group">
                <label asp-for="FieldName" class="control-label">Field Name</label>
                <input asp-for="FieldName" class="form-control" />
                <span asp-validation-for="FieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="text" asp-for="StreetNumber" class="form-control" name="streetnumber" value="@Model.StreetNumber" placeholder="Street Number (12, 3456)"/>
                <input type="text" asp-for="Street" class="form-control" name="street" value="@Model.Street" placeholder="Street Address 1 & 2"/>
                <input type="text" asp-for="City" class="form-control" name="city" value="@Model.City" placeholder="City"/>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <input type="text" asp-for="State" class="form-control" name="state" value="@Model.State" placeholder="State (OH, MA, AK, etc.)"/>
                    </div>
                    <div class="col">
                        <input type="text" asp-for="Zipcode" class="form-control" name="zipcode" value="@Model.Zipcode" placeholder="Zipcode" minlength="2" maxlength="2"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
</div>

